 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/pages/welcome.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>previewGifts</from-outcome>
   <to-view-id>/pages/user/giftpreview.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>regUser</from-outcome>
   <to-view-id>/pages/user/welcome.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>admin</from-outcome>
   <to-view-id>/pages/admin/welcome.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>singInToPresent</from-outcome>
   <to-view-id>/pages/singInToPresent.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/welcome.xhtml</from-view-id>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/user/*</from-view-id>
  <navigation-case>
   <from-outcome>homeUser</from-outcome>
   <to-view-id>/pages/user/welcome.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>profile</from-outcome>
   <to-view-id>/pages/user/profile.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>listGifts</from-outcome>
   <to-view-id>/pages/user/giftlist.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>giftpresented</from-outcome>
   <to-view-id>/pages/user/giftpresented.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/user/giftlist.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>edit</from-outcome>
   <to-view-id>/pages/user/giftedit.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/pages/singInToPresent.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>regUser</from-outcome>
   <to-view-id>/pages/user/welcome.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <validator>
  <validator-id>validate.Email</validator-id>
  <validator-class>ua.cn.yet.birthdayGifts.web.tags.ValidateEmail</validator-class>
 </validator>
 <application>
  <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
  <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
  <message-bundle>resources</message-bundle>
  <locale-config>
   <default-locale>ru</default-locale>
   <supported-locale>ru</supported-locale>
  </locale-config>
 </application>
</faces-config>
